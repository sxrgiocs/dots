########################################################################
#               W M  I N D E P E N D E N T  H O T K E Y S              #
########################################################################

# terminal emulator
super + Return
	alacritty

#lock screen and suspend
ctrl + super + alt + x
	systemctl suspend & betterlockscreen -l

# program launcher
super + p
	rofi -show drun -show-icons -font "SF Pro Display 12" -columns 3 -width 40 -drun-match-fields "exec" -display-drun "" -lines 10

#alternative program launcher
super + shift + d
        rofi -show run -columns 3 -width 70

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

rofi system menu
super + shift + p
	/home/sergio/.config/rofi/scripts/power-menu-sxhkd.sh 

########################################################################
#                       B S P W M  H O T K E Y S                       #
########################################################################

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest



########################################################################
#                          S T A T E / F L A G S                       #
########################################################################

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}



########################################################################
#                        F O C U S / S W A P                           #
########################################################################

# focus the node in the given direction
super + {_,shift + }{Left, Down, Up, Right}
	bspc node -{f,s} {west,south,north,east}
